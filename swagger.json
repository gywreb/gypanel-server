{
  "openapi": "3.0.2",
  "servers": [
    {
      "url": "http://localhost:{port}/adminPanel/api",
      "description": "development server",
      "variables": {
        "port": { "default": "5000" }
      }
    },
    {
      "url": "http://139.180.196.41:6969/adminPanel/api",
      "description": "production server"
    }
  ],
  "info": {
    "version": "1.7.3",
    "title": "Admin Panel",
    "description": "This is an admin panel for manage e-commerce app"
  },
  "tags": [
    {
      "name": "Auth",
      "description": "User authentication"
    },
    {
      "name": "User",
      "description": "Operations about user"
    },
    {
      "name": "Product",
      "description": "Operations about product"
    },
    {
      "name": "Category",
      "description": "Operations about category"
    },
    {
      "name": "Staff",
      "description": "Operations about staff"
    },
    {
      "name": "Customer",
      "description": "Operations about customer"
    },
    {
      "name": "Invoice",
      "description": "Operations about invoice"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "user registeration",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "fullname": "DragonGod-sama",
                    "email": "admin@gmail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "user login",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "devAdmin": {
                  "value": {
                    "email": "admin@gmail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/user/getCurrent": {
      "get": {
        "tags": ["User"],
        "summary": "get current auth user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "OK": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": true,
                "code": 200,
                "data": {}
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "resource not found",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 404,
                "message": ""
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "bad request",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 400,
                "message": {
                  "errorField": ""
                }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 401,
                "message": ""
              }
            }
          }
        }
      },
      "Forbidden": {
        "description": "no permission to access",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 403,
                "message": ""
              }
            }
          }
        }
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": ["fullname", "email", "password"],
        "properties": {
          "fullname": {
            "type": "string",
            "example": "dragingod-sama"
          },
          "email": {
            "type": "string",
            "uniqueItems": true,
            "example": "admin@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 6
          },
          "phone": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["devAdmin", "companyAdmin"],
            "example": "devAdmin"
          },
          "isActive": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "Product": {
        "type": "object",
        "required": ["name", "price", "featuredImg"],
        "properties": {
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "number",
            "default": 1
          },
          "description": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": { "type": "string", "format": "binary" }
          },
          "featuredImg": {
            "type": "string",
            "format": "binary"
          },
          "categories": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "Category": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "uniqueItems": true
          },
          "description": {
            "type": "string"
          }
        }
      },
      "Staff": {
        "type": "object",
        "required": ["firstname", "lastname", "gender", "contactEmail"],
        "properties": {
          "firstname": {
            "type": "string",
            "example": "dragingod-sama"
          },
          "lastname": {
            "type": "string",
            "example": "dragingod-sama"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },
          "phone": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "contactEmail": {
            "type": "string",
            "uniqueItems": true,
            "example": "someone@gmail.com"
          },
          "invoices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Invoice"
            }
          }
        }
      },
      "Invoice": {
        "type": "object",
        "required": ["total"],
        "properties": {
          "fromStaff": {
            "type": "string",
            "$ref": "#/components/schemas/Staff"
          },
          "clientInfo": {
            "type": "string",
            "$ref": "#/components/schemas/Customer"
          },
          "paymentDate": {
            "type": "string",
            "format": "date"
          },
          "total": {
            "type": "number"
          },
          "tax": {
            "type": "number",
            "default": 0
          },
          "shippingFee": {
            "type": "number",
            "default": 0
          }
        }
      },
      "Customer": {
        "type": "object",
        "required": ["firstname", "lastname", "gender", "contactEmail"],
        "properties": {
          "firstname": {
            "type": "string",
            "example": "dragingod-sama"
          },
          "lastname": {
            "type": "string",
            "example": "dragingod-sama"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"]
          },
          "phone": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "uniqueItems": true,
            "example": "someone@gmail.com"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
